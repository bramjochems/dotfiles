
# top-most EditorConfig file
root = true

###############
# Default
###############
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

###############
# Python
###############
[*.py]
indent_size = 4
max_line_length = 120

###############
# TypeScript / JavaScript / React
###############
[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = double

###############
# CSS / SCSS / LESS
###############
[*.{css,scss,less}]
indent_size = 2

###############
# Markdown
###############
[*.md]
trim_trailing_whitespace = false  # Preserve spacing for lists/code
indent_size = 2

###############
# Bicep
###############
[*.bicep]
indent_size = 2

###############
# Lua
###############
[*.lua]
indent_size = 2

###############
# C#
###############
[*.cs]
indent_size = 4

###############
# Shell scripts
###############
[*.sh]
indent_style = space
indent_size = 2

###############
# JSON
###############
[*.json]
indent_size = 2

###############
# YAML
###############
[*.{yaml,yml}]
indent_size = 2

###############
# HTML
###############
[*.html]
indent_size = 2
